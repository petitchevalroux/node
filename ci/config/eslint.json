{
    "rules": {
        "strict": "error",
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "complexity": [
            "error",
            8
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "max-len":["error", 120],
        "no-param-reassign": [2, { "props": false }]
    },
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "extends": ["eslint:recommended", "plugin:promise/recommended"],
    "plugins": ["promise"]
}